
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center text-2xl font-bold text-teal-500">Tallas</h1>
    </div>
  </div>
</div>
<table class="table mt-3">
  <% @tallas.each do |talla| %>
    <tr id="<%= dom_id(talla) %>">
      <td><%= talla.name %></td>
      <td><%= link_to "Edit", edit_talla_path(talla), class: "btn btn-primary btn-sm"  %></td>
      <td><%= link_to "Delete", talla_path(talla), data: { turbo_method: :delete, turbo_confirm: "Alerta, ¿estás seguro?" }, class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
</table>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= link_to new_talla_path, class: "btn d-flex align-items-center custom-btn",  style: "text-align: left; border: 2px solid #17E010;" do %>
        <%= image_tag 'icons/add.svg', width: 35, height: 35 %>
        <p class="ml-2" style="font-weight: bold;">Nueva talla</p>
      <% end %>
    </div>
  </div>
</div>

